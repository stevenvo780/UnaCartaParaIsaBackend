{
  "id": null,
  "uid": "runtime-overview",
  "title": "Simulation Runtime Overview",
  "schemaVersion": 38,
  "version": 1,
  "timezone": "browser",
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Tick Duration (avg ms)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "backend_tick_duration_ms",
          "legendFormat": "{{rate}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "min": 0
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "System Hotspots (avg ms)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "topk(10, backend_system_execution_ms)",
          "legendFormat": "{{system}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "min": 0
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Entities en scheduler",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "backend_scheduler_entity_count",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Memoria usada (MB)",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 },
      "targets": [
        {
          "expr": "backend_memory_bytes{type=\"heapUsed\"} / 1024 / 1024",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decbytes"
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Event Loop Utilization",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "backend_event_loop_utilization",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit"
        },
        "overrides": []
      }
    }
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}


{
  "id": null,
  "uid": "operations-deep-dive",
  "title": "6. Operations Deep Dive - Rendimiento Detallado",
  "tags": ["simulation", "performance", "operations", "throughput"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "type": "row",
      "title": "Throughput y Volumen de Trabajo",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Throughput - Entidades Procesadas por Segundo",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "topk(10, backend_operation_throughput_per_sec)",
          "legendFormat": "{{operation}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "min": 0,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["mean", "max", "lastNotNull"],
          "sortBy": "Mean",
          "sortDesc": true
        }
      }
    },
    {
      "type": "stat",
      "title": "Total de Entidades Procesadas",
      "gridPos": { "h": 5, "w": 6, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "sum(backend_operation_entities_processed_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "green" },
              { "value": 100000, "color": "yellow" },
              { "value": 1000000, "color": "red" }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "textMode": "auto"
      }
    },
    {
      "type": "stat",
      "title": "Ejecuciones Totales",
      "gridPos": { "h": 5, "w": 6, "x": 18, "y": 1 },
      "targets": [
        {
          "expr": "sum(backend_operation_executions_total)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "blue" }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "textMode": "auto"
      }
    },
    {
      "type": "piechart",
      "title": "Distribución de Entidades por Operación",
      "gridPos": { "h": 5, "w": 12, "x": 12, "y": 6 },
      "targets": [
        {
          "expr": "topk(10, backend_operation_entities_processed_total)",
          "legendFormat": "{{operation}}",
          "refId": "A",
          "instant": true
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "donut",
        "tooltip": {
          "mode": "multi"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "type": "row",
      "title": "Optimizaciones y Eficiencia",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 11 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Operaciones Evitadas (Optimizaciones)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "topk(10, rate(backend_operation_skipped_total[1m]))",
          "legendFormat": "{{operation}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "min": 0,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 15
          },
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "tooltip": { "mode": "multi" },
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["mean", "max"]
        }
      }
    },
    {
      "type": "bargauge",
      "title": "Ratio de Optimización (Skipped / Total)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "topk(10, backend_operation_skipped_total / (backend_operation_executions_total + backend_operation_skipped_total))",
          "legendFormat": "{{operation}}",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": null, "color": "red" },
              { "value": 0.1, "color": "yellow" },
              { "value": 0.3, "color": "green" }
            ]
          }
        }
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      }
    },
    {
      "type": "row",
      "title": "Tiempos de Ejecución Detallados",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 20 },
      "collapsed": false
    },
    {
      "type": "timeseries",
      "title": "Tiempo Promedio vs Máximo vs Mínimo",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 21 },
      "targets": [
        {
          "expr": "backend_operation_duration_ms{stat=\"avg\"}",
          "legendFormat": "{{operation}} (avg)",
          "refId": "A"
        },
        {
          "expr": "backend_operation_duration_ms{stat=\"max\"}",
          "legendFormat": "{{operation}} (max)",
          "refId": "B"
        },
        {
          "expr": "backend_operation_duration_ms{stat=\"min\"}",
          "legendFormat": "{{operation}} (min)",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "min": 0,
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 5,
            "showPoints": "never"
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byFrameRefID", "options": "B" },
            "properties": [
              {
                "id": "custom.lineStyle",
                "value": { "dash": [10, 10], "fill": "dash" }
              },
              {
                "id": "color",
                "value": { "mode": "fixed", "fixedColor": "red" }
              }
            ]
          },
          {
            "matcher": { "id": "byFrameRefID", "options": "C" },
            "properties": [
              {
                "id": "custom.lineStyle",
                "value": { "dash": [5, 5], "fill": "dash" }
              },
              {
                "id": "color",
                "value": { "mode": "fixed", "fixedColor": "green" }
              }
            ]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "calcs": ["mean", "max", "min"],
          "sortBy": "Mean",
          "sortDesc": true
        }
      }
    },
    {
      "type": "table",
      "title": "Resumen de Operaciones",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 31 },
      "targets": [
        {
          "expr": "backend_operation_executions_total",
          "format": "table",
          "refId": "A",
          "instant": true
        },
        {
          "expr": "backend_operation_entities_processed_total",
          "format": "table",
          "refId": "B",
          "instant": true
        },
        {
          "expr": "backend_operation_skipped_total",
          "format": "table",
          "refId": "C",
          "instant": true
        },
        {
          "expr": "backend_operation_duration_ms{stat=\"avg\"}",
          "format": "table",
          "refId": "D",
          "instant": true
        },
        {
          "expr": "backend_operation_throughput_per_sec",
          "format": "table",
          "refId": "E",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "merge"
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "stat": true
            },
            "renameByName": {
              "operation": "Operation",
              "Value #A": "Executions",
              "Value #B": "Entities Processed",
              "Value #C": "Skipped",
              "Value #D": "Avg Duration (ms)",
              "Value #E": "Throughput (ent/s)"
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [
          {
            "displayName": "Avg Duration (ms)",
            "desc": true
          }
        ]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Avg Duration (ms)" },
            "properties": [
              {
                "id": "unit",
                "value": "ms"
              },
              {
                "id": "custom.width",
                "value": 150
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Throughput (ent/s)" },
            "properties": [
              {
                "id": "unit",
                "value": "ops"
              },
              {
                "id": "custom.width",
                "value": 150
              }
            ]
          }
        ]
      }
    }
  ]
}
